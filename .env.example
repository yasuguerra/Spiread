# Spiread Production Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# APP CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME=Spiread
NEXT_PUBLIC_BASE_URL=https://app.spiread.com

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
AI_ENABLED=true
AI_PROVIDER=openai
AI_MAX_CALLS_PER_DAY=100
AI_MAX_TOKENS_PER_MONTH=100000

# Emergent LLM Key (universal key for OpenAI, Anthropic, Google)
EMERGENT_LLM_KEY=sk-emergent-your-key-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
PWA_ENABLED=true
STRIPE_ENABLED=false
ANALYTICS_ENABLED=false
SENTRY_ENABLED=false

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
# CSRF Protection
CSRF_SECRET=your-csrf-secret-32-chars-min

# Rate Limiting (Redis for production)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=spiread
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Analytics (Plausible or PostHog)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=app.spiread.com
# OR
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# DEPLOYMENT & VERSIONING
# =============================================================================
NODE_ENV=production
APP_VERSION=1.0.0
VERCEL_GIT_COMMIT_SHA=auto-populated-by-vercel
VERCEL_ENV=production

# =============================================================================
# CORS & DOMAIN CONFIGURATION
# =============================================================================
CORS_ORIGINS=https://app.spiread.com,https://spiread.com
ALLOWED_HOSTS=app.spiread.com,spiread.com